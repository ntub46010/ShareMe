<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="colorControlHighlight">#0000FF</item>--> <!--清單點擊顏色-->
        <item name="colorControlActivated">@color/bg_header</item> <!--ProgressBar、EditText點擊後顏色-->
        <!--<item name="colorControlNormal">#00FF00</item>--> <!--Toolbar返回鍵、EditText點擊前顏色-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="edt_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/bg_square_blue</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="btn_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="edt_register">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="radio_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/rdo_gender</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/bg_header</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="btnDep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">1.5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:background">@color/red1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableTint">#FFFFFF</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="txt_goods_detail_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="txt_goods_detail_content" parent="txt_goods_detail_title">
        <item name="android:textColor">#555555</item>
    </style>

    <style name="edt_goods_post_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="chk_goods_dep">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="img_goods_pic">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="txt_goods_title">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:lineSpacingExtra">@dimen/spaceVertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="txt_goods_info">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="prg_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>
    <style name="prg_medium">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="img_avatar">
        <item name="android:padding">1dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/no_avatar</item>
        <item name="android:background">@drawable/bg_square_white</item>
    </style>

    <style name="txt_profile_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#36353A</item>
    </style>

    <style name="btn_profile_evaluate">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="txt_profile_evaluate" parent="txt_profile_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="img_chat_avatar_left">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="img_chat_avatar_right" parent="img_chat_avatar_left">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>

    <style name="txt_chat_msg_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:lineSpacingExtra">@dimen/spaceVertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="txt_chat_msg_left" parent="txt_chat_msg_right">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="edt_set_profile">
        <item name="android:layout_width">200dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">1.6dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="img_member_setting_list">
        <item name="android:layout_width">43dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="txt_member_setting_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>