<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xy.shareme_tomcat.Member.MemberProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        app:titleTextColor="#FFFFFF"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:id="@+id/layInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal"
                    android:paddingStart="10dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="140dp"
                            android:layout_height="168dp"
                            android:padding="1dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/no_avatar"
                            android:background="@drawable/bg_square_white"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="5dp"
                        android:paddingStart="10dp"
                        android:paddingTop="3dp"
                        android:orientation="vertical">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:layout_marginBottom="8dp">
                                <TextView
                                    style="@style/txt_profile_title"
                                    android:text="姓名："/>
                                <TextView
                                    android:id="@+id/txtName"
                                    style="@style/txt_profile_title"/>
                            </TableRow>
                            <TableRow
                                android:layout_marginBottom="0dp">
                                <TextView
                                    style="@style/txt_profile_title"
                                    android:text="科系："/>
                                <TextView
                                    android:id="@+id/txtDepartment"
                                    style="@style/txt_profile_title"
                                    android:layout_weight="1"
                                    android:layout_height="52dp"
                                    android:paddingEnd="2.2dp"/>
                            </TableRow>
                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="3dp">
                            <TextView
                                style="@style/txt_profile_title"
                                android:text="聯繫："/>
                            <Button
                                android:id="@+id/btnEmail"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/icon_gmail"/>
                        </LinearLayout>

                        <TextView
                            style="@style/txt_profile_title"
                            android:layout_height="wrap_content"
                            android:text="評價："/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:paddingStart="2dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/layPositive"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="horizontal"
                                android:layout_marginEnd="5dp"
                                android:onClick="onClick">
                                <ImageButton
                                    android:id="@+id/btnPositive"
                                    style="@style/btn_profile_evaluate"
                                    android:background="@drawable/value_positive"/>
                                <TextView
                                    android:id="@+id/txtPositive"
                                    style="@style/txt_profile_evaluate"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/layNegative"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="horizontal"
                                android:layout_marginEnd="5dp"
                                android:onClick="onClick">
                                <ImageButton
                                    android:id="@+id/btnNegative"
                                    style="@style/btn_profile_evaluate"
                                    android:background="@drawable/value_negative"/>
                                <TextView
                                    android:id="@+id/txtNegative"
                                    style="@style/txt_profile_evaluate"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@color/red3"
                    android:textColor="#FFFFFF"
                    android:text="上架商品"
                    android:textSize="18sp"/>

                <GridView
                    android:id="@+id/grdShelf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:numColumns="3"
                    android:listSelector="@drawable/bg_gridview"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/prgBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="visible"/>

        </FrameLayout>

</RelativeLayout>
