<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layRegisterField"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edtRegAccount"
                    style="@style/edt_register"
                    android:hint="帳號，8~10位英數"/>
                <EditText
                    android:id="@+id/edtRegPassword"
                    style="@style/edt_register"
                    android:layout_marginTop="5dp"
                    android:hint="密碼，6~15位英數"
                    android:inputType="textPassword"/>
                <EditText
                    android:id="@+id/edtRegPasswordAgain"
                    style="@style/edt_register"
                    android:layout_marginTop="5dp"
                    android:hint="確認密碼"
                    android:inputType="textPassword"/>
                <EditText
                    android:id="@+id/edtRegName"
                    style="@style/edt_register"
                    android:layout_marginTop="5dp"
                    android:hint="姓名"/>
                <EditText
                    android:id="@+id/edtRegEmail"
                    style="@style/edt_register"
                    android:layout_marginTop="5dp"
                    android:hint="信箱"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="性別："
                        android:textSize="18sp"/>
                    <RadioGroup
                        android:id="@+id/rgpRegGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="-5dp">
                        <RadioButton
                            android:id="@+id/rdoRegMale"
                            style="@style/radio_btn"
                            android:layout_marginEnd="20dp"
                            android:text="男"/>
                        <RadioButton
                            android:id="@+id/rdoRegFemale"
                            style="@style/radio_btn"
                            android:text="女" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="科系："
                        android:textSize="18sp"/>
                    <Spinner
                        android:id="@+id/spnRegDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:entries="@array/department"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/btnRegConfirm"
                    style="@style/btn_login"
                    android:text="register"
                    android:background="@drawable/btn_register_confirm" />
                <Button
                    android:id="@+id/btnRegCancel"
                    style="@style/btn_login"
                    android:text="cancel"
                    android:background="@drawable/btn_register_cancel" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>