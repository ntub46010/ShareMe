<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layProductCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgBookSummaryPic"
        style="@style/img_goods_pic"
        android:background="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtBookSummaryTitle"
            style="@style/txt_goods_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="書名書名書名書名書名書名書名書名書名書名書名書名書名書名書名書名書名書名書名書名"/>

        <TextView
            android:id="@+id/txtBookSummaryPrice"
            style="@style/txt_goods_info"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="#EE0000"/>

        <TextView
            android:id="@+id/txtSeller"
            style="@style/txt_goods_info"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:textSize="16sp"
            android:textColor="#FF444444"
            android:text="賣家賣家賣家賣家賣家賣家"/>

    </LinearLayout>

</LinearLayout>